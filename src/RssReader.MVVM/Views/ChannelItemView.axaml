<UserControl x:Class="RssReader.MVVM.Views.ChannelItemView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 
         xmlns:vm="using:RssReader.MVVM.ViewModels"
             mc:Ignorable="d"
             d:DesignWidth="300" d:DesignHeight="400"
             x:DataType="vm:ChannelItemViewModel" x:CompileBindings="True">
    
    <StackPanel Margin="5">
        <TextBlock Text="{Binding Source.Title}" FontWeight="Bold" TextWrapping="Wrap" Width="380" HorizontalAlignment="Stretch" />
        <!-- <TextBox Text="{Binding Description}" Height="100" TextWrapping="Wrap" IsReadOnly="True" HorizontalAlignment="Stretch" /> -->
        <!-- xmlns:av="clr-namespace:TheArtOfDev.HtmlRenderer.Avalonia;assembly=Avalonia.HtmlRenderer" -->
        <!-- <av:HtmlPanel Text="{Binding Source.Description}" Background="MintCream" /> -->
        <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Width="380" HorizontalAlignment="Stretch" />
    </StackPanel>
    
</UserControl>             
